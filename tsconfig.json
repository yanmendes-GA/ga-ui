    "noEmit": false,                // 4. ESSENCIAL: Permite que o TS gere arquivos
    "rootDir": "./src"              // 5. Informa onde estÃ¡ o cÃ³digo-fonte
  },
  
  /* ðŸ‘‡ ONDE O TSC DEVE LER OS ARQUIVOS ðŸ‘‡ */
